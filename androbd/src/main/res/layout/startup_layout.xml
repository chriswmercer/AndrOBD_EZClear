<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#20FFFFFF"
        android:contentDescription="@string/logo"
        android:padding="@dimen/activity_horizontal_margin"
        android:src="@drawable/logo"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#40000000">

        <Button
            android:id="@+id/clearBTN"
            android:layout_width="match_parent"
            android:layout_height="326dp"
            android:onClick="clearBTNClicked"
            android:text="CLEAR"
            android:textSize="60sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:contentDescription="@string/url_app_mainpage"
            android:gravity="center"
            android:onClick="browseClickedUrl"
            android:text="Sweetloop Car Helper"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:contentDescription="@string/url_app_releases"
            android:enabled="true"
            android:gravity="center"
            android:onClick="browseClickedUrl"
            android:text="@string/app_version"
            android:textAppearance="@android:style/TextAppearance.Small"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="(C) Lads Computer Corporation 2024"
            android:textAppearance="@android:style/TextAppearance.Small" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:contentDescription="@string/url_app_translation"
            android:gravity="center"
            android:onClick="browseClickedUrl"
            android:textAppearance="@android:style/TextAppearance.Small" />
    </LinearLayout>

    <ListView
        android:id="@android:id/list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:visibility="invisible"/>

</LinearLayout>
